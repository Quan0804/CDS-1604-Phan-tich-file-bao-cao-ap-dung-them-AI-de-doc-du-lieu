    font-size: 0.9rem;
  }

  .section-preview {
    color: var(--text-light);
    line-height: 1.6;
    padding-left: 3rem;
  }

  .conclusion-card {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-left: 4px solid var(--warning-color);
  }

  .conclusion-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #78350f;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .themes-grid,
    .two-column-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

