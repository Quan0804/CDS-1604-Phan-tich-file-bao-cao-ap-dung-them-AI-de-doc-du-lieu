<style>
  .text-analysis {
    padding: 2rem 0;
  }

  .analysis-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .main-topic {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-color);
    margin: 1rem 0;
    text-align: center;
  }

  .summary-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-color);
  }

  .highlight-card {
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    border-left: 4px solid var(--primary-color);
  }

  .sentiment-card {
    text-align: center;
  }

  .sentiment-box {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 2rem;
    border-radius: 12px;
    margin: 1rem 0;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .sentiment-box.positive {
    background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
    color: #065f46;
  }

  .sentiment-box.negative {
    background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
    color: #991b1b;
  }

  .sentiment-box.neutral,
  .sentiment-box.mixed {
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    color: #374151;
  }

  .sentiment-icon {
    font-size: 2rem;
  }

  .key-points-list {
    list-style: none;
    padding: 0;
  }

  .key-points-list li {
    display: flex;
    align-items: start;
    gap: 1rem;
    padding: 1rem;
    margin-bottom: 0.75rem;
    background: var(--bg-color);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .key-points-list li:hover {
    background: #e0f2fe;
    transform: translateX(5px);
  }

  .point-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--primary-color);
    color: white;
    border-radius: 50%;
    font-weight: 600;
    flex-shrink: 0;
  }

  .point-text {
    flex: 1;
    line-height: 1.6;
  }

  .themes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
  }

  .theme-card {
    padding: 1.5rem;
    background: var(--bg-color);
    border-radius: 12px;
    border-left: 4px solid var(--primary-color);
    transition: all 0.3s ease;
  }

  .theme-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .theme-card h3 {
    color: var(--primary-color);
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }

  .theme-card h3 i {
    margin-right: 0.5rem;
  }

  .two-column-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .strengths-card {
    border-left: 4px solid var(--success-color);
  }

  .improvements-card {
    border-left: 4px solid var(--warning-color);
  }

  .strengths-list,
  .improvements-list {
    list-style: none;
    padding: 0;
  }

  .strengths-list li,
  .improvements-list li {
    padding: 0.75rem;
    margin-bottom: 0.5rem;
    background: var(--bg-color);
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .strengths-list i {
    color: var(--success-color);
  }

  .improvements-list i {
    color: var(--warning-color);
  }

  .sections-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .section-item {
    background: var(--bg-color);
    border-radius: 12px;
    padding: 1.5rem;
    border-left: 4px solid var(--secondary-color);
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .section-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: var(--secondary-color);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    flex-shrink: 0;
  }

  .section-header h3 {
    flex: 1;
    margin: 0;
    font-size: 1.1rem;
    color: var(--text-color);
  }

  .section-meta {
